
(var x-1 x-2 x-3 i-1 i-2 i-3 a b c Int)

(assume (and (= x-1 x-2 x-3 i-1 i-2 i-3 0) (>= a 0) (>= b 0) (>= c 0)))

(par
  (while (< i-1 a)
    (atomic
      (set! x-1 (+ x-1 c))
      (set! i-1 (+ i-1 1))))
  (while (< i-2 b)
    (atomic
      (set! x-2 (+ x-2 c))
      (set! i-2 (+ i-2 1))))
  (while (< i-3 (+ a b))
    (atomic
      (set! x-3 (+ x-3 c))
      (set! i-3 (+ i-3 1)))))

(assume (not
  (= (+ x-1 x-2) x-3)))